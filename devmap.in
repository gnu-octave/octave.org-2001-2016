    <script type="text/javascript">

    //<![CDATA[

function describeContributorHtml(contributor) {
  return contributor.name.bold() + "<br>"
    + contributor.address + "<br>"
    + contributor.role.italics();
}

function showContributors (map, list) {
  var geocoder = new GClientGeocoder();

  function showContributor (contributor) {
    var point = new GLatLng(contributor.lat, contributor.lon);
    var marker = new GMarker(point);
    GEvent.addListener(marker, "click", function () { 
	map.openInfoWindowHtml(point, describeContributorHtml (contributor));
	});
    map.addOverlay (marker);
  }

  for (i in list) showContributor (list[i]);
}

function load() {
  map_canvas = document.getElementById("map_canvas");
  if (GBrowserIsCompatible()) {
    var map = new GMap2(map_canvas);
    map.setCenter(new GLatLng(20, -10), 2);
    map.addControl(new GMapTypeControl());
    map.addControl(new GLargeMapControl());
    map.enableDoubleClickZoom();
    map.enableContinuousZoom();
    map.enableGoogleBar();
    map.enableScrollWheelZoom();

    showContributors (map, getContributorsList ());

  } else {
    map_canvas.innerHTML = "<i>Sorry, your browser doesn't seem to support Google Maps.</i>";
  }

}

    //]]>
    </script>
</head>
<body onload="load()" onunload="GUnload()">
